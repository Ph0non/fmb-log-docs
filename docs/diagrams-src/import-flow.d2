direction: right

style: {
  stroke: "#3d3e3d"
  stroke-width: 1
  font-size: 22
  border-radius: 8
}

title: "Import (RPT / Gammaspektrometrie)" {
  near: top-center
  shape: text
  style.font-size: 24
  style.bold: true
}

# Teil A: Vorbereitung
prep: {
  direction: down
  label: "Teil A – Vorbereitung"

  open: "Import öffnen" {
    style.fill: "#006e78"
    style.font-color: "#ffffff"
  }

  container: "Gebinde wählen\noder neu anlegen" {
    style.fill: "#217ca3"
    style.font-color: "#ffffff"
  }

  meta: "Gebinde-Daten:\nDatenblatt / Herkunft / FMK" {
    style.fill: "#217ca3"
    style.font-color: "#ffffff"
  }

  fmk: "FMK wählen\n(empfohlen)" {
    style.fill: "#217ca3"
    style.font-color: "#ffffff"
  }

  cont_a: "1" {
    shape: circle
    style.fill: "#ffffff"
    style.font-color: "#3d3e3d"
  }

  open -> container -> meta -> fmk -> cont_a
}

# Teil B: Import
import: {
  direction: down
  label: "Teil B – Import"

  cont_b: "1" {
    shape: circle
    style.fill: "#ffffff"
    style.font-color: "#3d3e3d"
  }

  files: "RPT-Dateien auswählen\n(Mehrfachauswahl)" {
    style.fill: "#006e78"
    style.font-color: "#ffffff"
  }

  review: "Import-Tabelle prüfen:\nDatum / Einheit / Nuklide" {
    style.fill: "#217ca3"
    style.font-color: "#ffffff"
  }

  date: "Optional: Messdatum ändern\n(Berechtigung)" {
    style.fill: "#f17119"
    style.font-color: "#ffffff"
  }

  start: "Import starten" {
    style.fill: "#63a90f"
    style.font-color: "#ffffff"
  }

  cont_c: "2" {
    shape: circle
    style.fill: "#ffffff"
    style.font-color: "#3d3e3d"
  }

  cont_b -> files -> review -> date -> start -> cont_c
}

# Teil C: Abschluss
finish: {
  direction: down
  label: "Teil C – Abschluss"

  cont_d: "2" {
    shape: circle
    style.fill: "#ffffff"
    style.font-color: "#3d3e3d"
  }

  complete: "Gebinde als\nvollständig markieren" {
    style.fill: "#63a90f"
    style.font-color: "#ffffff"
  }

  detail: "Gebinde-Detail öffnen\n(Prüfen / Protokoll / ISO)" {
    style.fill: "#006e78"
    style.font-color: "#ffffff"
  }

  cont_d -> complete -> detail
}
